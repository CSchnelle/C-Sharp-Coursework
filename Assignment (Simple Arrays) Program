using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
/*
 * Cat Schnelle
 */
 
     
namespace Assignment_04
{
    class Program
    {
        static void Main(string[] args)
        {
            //Declaring a single dimensional array means declaring variables with the same data type as one another.
            // the "int[] is the declaration, brackets come after type not identifier. Declaration doesn't create the array until they are instantiated
            // by use of " = new int [5], array1 is the identifier. 
            int[] array1 = new int[5];
            Console.WriteLine("Single-Dimensional Array");
            for (int item = 0; item < 5; item++)
            {
                Console.WriteLine("{0} : {1}", item, array1[item]);
            }
            Console.WriteLine();
            // Declaring multi dimensional arrays means to declare variables of similar types,
            //for instance information stored in a columns instead of only a single row.
            // initializing arrays is done by use of curly braces as seen below and is done at time of declaration.
            int[] array2 = new int[] { 1, 3, 5, 7, 9 };
            Console.WriteLine("Declare and set array element values");
            for (int item  = 0; item < 5; item++)
            {
                Console.WriteLine("..{0} : {1}", item, array2[item]);
            }
            Console.WriteLine();
            Console.Write("Press any key to continue.");
            Console.ReadKey();
        }
    }
}
